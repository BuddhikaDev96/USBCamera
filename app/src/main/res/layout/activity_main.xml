                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RED"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/focuscolorswitch"
                            app:layout_constraintStart_toEndOf="@+id/focuscolorswitch" />

                        <Switch
                            android:id="@+id/focuscolorswitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
